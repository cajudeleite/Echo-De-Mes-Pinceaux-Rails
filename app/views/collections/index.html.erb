<section class='category'>
  <% if user_signed_in? %>
    <div class="category__create">
      <%= button_to new_collection_path, class: 'category__create__button', :method => "get" do %>
        Nouvelle Collection<i class="fa-solid fa-plus category__create__button__plus"></i>
      <% end %>
    </div>
  <% end %>
  <h2 class='category__disclaimer'>Collections</h2>
  <div class="category__list">
    <% @collections.each do |collection| %>
      <div class="category__list__item">
        <%= link_to collection, method: :delete, data: { confirm: 'Are you sure?' }, class: 'category__list__item__delete' do %>
          <i class="fa-solid fa-xmark category__list__item__delete__icon"></i>
        <% end %>
        <h3 class="category__list__item__title"><%= collection.name %></h3>
        <%= button_to 'Modifier', edit_collection_path(collection) %>
      </div>
    <% end %>
  </div>
</section>
