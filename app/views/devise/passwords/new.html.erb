<section class="form">
  <div class="form__container">
    <h1 class='form__container__title'>Avez-vous oubli√© votre mot de passe?</h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form__container__form'}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email,
                  required: true,
                  wrapper_html: { class: 'form__container__form__input__text' },
                  input_html: { class: 'form__container__form__input__text__input', autocomplete: "email" },
                  label_html: { class: 'form__container__form__input__text__label' },
                  label: 'Couriel',
                  autofocus: true %>
      <%= f.button :submit, class: 'form__container__form__submit', value: "Envoyer instructions" %>
    <% end %>
    <div class="form__container__links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
