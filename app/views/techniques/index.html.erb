<section class='category'>
  <% if user_signed_in? %>
    <div class="category__create">
      <%= button_to new_technique_path, class: 'category__create__button', :method => "get" do %>
        Nouvelle Technique<i class="fa-solid fa-plus category__create__button__plus"></i>
      <% end %>
    </div>
  <% end %>
  <h2 class='category__disclaimer'>Techniques</h2>
  <div class="category__list">
    <% @techniques.each do |technique| %>
      <div class="category__list__item">
      </div>
    <% end %>
  </div>
</section>


<h1>Techniques</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @techniques.each do |technique| %>
      <tr>
        <td><%= technique.name %></td>
        <td><%= link_to 'Edit', edit_technique_path(technique) %></td>
        <td><%= link_to 'Destroy', technique, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
