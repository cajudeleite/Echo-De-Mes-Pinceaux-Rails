<%= simple_form_for @status, :html=> { class: 'form__container__form' } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name, wrapper_html: { class: 'form__container__form__input__text' }, input_html: { class: 'form__container__form__input__text__input' }, label_html: { class: 'form__container__form__input__text__label' }, label: 'Nom' %>
  <%= f.button :submit, class: 'form__container__form__submit', value: 'Publier' %>
<% end %>
